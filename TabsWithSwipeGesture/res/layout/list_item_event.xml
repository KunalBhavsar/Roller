        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/oval_black_background" >

            <TextView
                android:id="@+id/txt_event_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_marginLeft="@dimen/_10dp"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:text="event_time"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sp" />

            <TextView
                android:id="@+id/txt_event_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_marginRight="@dimen/_10dp"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:text="event cost"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sp" />

            <ImageView
                android:id="@+id/img_locator"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:layout_above="@id/txt_event_time"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_marginLeft="@dimen/_10dp"
                android:src="@drawable/locator1" />

            <TextView
                android:id="@+id/txt_venue_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/txt_event_time"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_toRightOf="@id/img_locator"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:text="venue name"
                android:textColor="@color/light_blue"
                android:textSize="@dimen/_15sp" />

            <TextView
                android:id="@+id/txt_area_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/txt_event_time"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_toRightOf="@id/txt_venue_name"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:text="area name"
                android:textColor="@color/light_blue"
                android:textSize="@dimen/_15sp" />

            <TextView
                android:id="@+id/txt_event_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txt_venue_name"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_marginLeft="@dimen/_10dp"
                android:background="@drawable/oval_white_background"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:text="event category"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_16sp" />

            <TextView
                android:id="@+id/txt_event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txt_event_category"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_marginLeft="@dimen/_10dp"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:text="event name"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_18sp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/blank_space"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@id/rel_item_event"
        android:background="@android:color/white" />

</RelativeLayout>